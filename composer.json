{
    "name"                  : "larawise/console",
    "type"                  : "package",
    "description"           : "Console – ",
    "keywords"              : [],
    "license"               : "MIT",
    "homepage"              : "https://larawise.com/",

    "authors"               : [{
        "name"            : "Selçuk Çukur",
        "email"           : "hk@selcukcukur.com.tr",
        "homepage"        : "https://selcukcukur.com.tr"
    }],

    "support"               : {
        "source"          : "https://github.com/larawise/console",
        "issues"          : "https://github.com/larawise/console/issues",
        "docs"            : "https://docs.larawise.com"
    },

    "require"               : {
        "php"                               : "^8.2|^8.3|^8.4",
        "illuminate/console"                : "^12.0",
        "illuminate/filesystem"             : "^12.0",
        "illuminate/support"                : "^12.0",
        "laravel/prompts"                   : "^0.3.0",
        "symfony/console"                   : "^7.0",
        "symfony/process"                   : "^7.0",
        "symfony/polyfill-mbstring"         : "^1.31"
    },
    "require-dev"           : {
        "phpstan/phpstan"                   : "^2.1",
        "phpunit/phpunit"                   : "^10.4"
    },

    "autoload"              : {
        "psr-4"     : {
            "Larawise\\CLI\\"               : "./src"
        }
    },
    "autoload-dev"          : {
        "psr-4"     : {
            "Larawise\\Tests\\"             : "./tests"
        }
    },

    "extra"                 : {},
    "bin"                   : ["bin/larawise"],

    "config"                : {
        "optimize-autoloader"   : true,
        "preferred-install"     : "dist",
        "sort-packages"         : true,
        "allow-plugins"         : {}
    },

    "minimum-stability"     : "dev",
    "prefer-stable"         : true
}
